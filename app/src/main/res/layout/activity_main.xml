<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <!-- Nested LinearLayout inside ScrollView -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Let me Introduce you to My Family."
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginTop="30dp"
                            android:layout_gravity="center" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="500dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:padding="10dp"
                            android:src="@drawable/mom"
                            android:id="@+id/mom"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="500dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:padding="10dp"
                            android:id="@+id/dad"
                            android:src="@drawable/dad" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="500dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:padding="10dp"
                            android:id="@+id/bibek"
                            android:src="@drawable/bibek" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="500dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:padding="10dp"
                            android:id="@+id/bikash"
                            android:src="@drawable/bikash" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="500dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:padding="10dp"
                            android:id="@+id/bishal"
                            android:src="@drawable/bishal" />

                        <Button
                            android:id="@+id/button"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="14dp"
                            android:layout_height="wrap_content"
                            android:text="Click Here ðŸš€" />

                </LinearLayout>

        </ScrollView>

</LinearLayout>
